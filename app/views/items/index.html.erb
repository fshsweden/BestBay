<div class="container-fluid">
  <div class="row-fluid">
    <div class="span3">
      <div class="well sidebar-nav">
        <ul class="nav nav-list">
          <li class="nav-header">Sidebar</li>
          <li><%= link_to image_tag('thumb.jpeg') %></li>
          <li>Name: Harshad Mande</li>
          <li>Addr: Pitt, PA</li>
          <li>Tel.: 412-378-5298</li>
        </ul>
      </div>
    </div>
    <div class="span9">
      <%= render 'shared/search_box' %>
      <a class="btn btn-primary btn-block btn-small">All Fashion Categories &raquo;</a>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span3 well">
    </div>
    <div class="span9 well">
      <table id='items' class="table">
        <tr>
          <th>Name</th>
          <th>Picture</th>
          <th>Description</th>
          <th>Opening Bid</th>
          <th>Highest Bid</th>
          <th>View Details</th>
        </tr>
        <tbody id='itemsbody'>
        <% @items.each do |item| %>
            <tr>
              <td><%= item.name %></td>
              <td><%= filepicker_image_tag( item.picture, {w: 160, h: 160, fit: 'clip'}, false) %></td>
              <td><%= item.description %></td>
              <td><%= item.opening_bid %></td>
              <td><%= item.highest_bid %></td>
              <td><%= link_to 'Show', item %></td>
              <%= form_tag line_items_path(item_id: item) do%>
                <td><%= select_tag "wishlist_id", options_from_collection_for_select(current_user.wishlists, "id", "name"), :include_blank => true, :class => 'form_input'%> </td>
                <td><%= submit_tag 'Add to Wishlist' %></td>
              <% end %>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
